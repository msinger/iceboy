set_io led[3]    C5
set_io led[4]    A1
set_io led[5]    A2
set_io led[6]    B4
set_io led[7]    B5

# Ext. Address Bus
set_io adr[0]    R15
set_io adr[1]    P16
set_io adr[2]    P15
set_io adr[3]    N16
set_io adr[4]    M15
set_io adr[5]    M16
set_io adr[6]    L16
set_io adr[7]    K15
set_io adr[8]    K16
set_io adr[9]    K14
set_io adr[10]   J14
set_io adr[11]   G14
set_io adr[12]   F14
set_io adr[13]   J15
set_io adr[14]   H14
set_io adr[15]   G15
set_io adr[16]   G16
set_io adr[17]   F15
set_io adr[18]   F16
set_io adr[19]   E14
set_io adr[20]   E16

# Ext. Data Bus
set_io data[0]   A9
set_io data[1]   B9
